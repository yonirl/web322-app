<div class="row">
  <section class="main col-md-9">
    {{#if data.item}}
      <item>
        <div class="row">
          <div class="col-4">
            <h2>{{data.item.title}}</h2>
            <!-- Image of the item -->
            <img src="{{data.item.featureImage}}" alt="Feature Image" style="width:100%" />
          </div>
          <div class="col-8">
            <br /><br />
            <div class="row">
              <div class="col-12">
                <div>{{#safeHTML data.item.body}}{{/safeHTML}}</div>
                <br /><br />
                <strong>Price:</strong> ${{data.item.price}}<br />
                <strong>Category:</strong> {{data.item.category}}<br />
                <strong>Last Updated:</strong> {{#formatDate data.item.postDate}}{{/formatDate}}<br />
              </div>
            </div>
          </div>
        </div>
      </item>
    {{else}}
      <div class="col-md-12 text-center">
        <h2>{{data.message}}</h2>
        <p>Please try another item or category</p>
      </div>
    {{/if}}
  </section>

  <aside class="col-md-3">
    <br /><br />
    {{#if data.items}}
      <h4>Items</h4>
      <ul class="list-group">
        {{#each data.items}}
          <a href="/shop/{{id}}?category={{../viewingCategory}}" class="list-group-item">{{title}}</a>
        {{/each}}
      </ul>
    {{/if}}

    {{#if data.categories}}
      <h4>Categories</h4>
      <ul class="list-group">
        {{#each data.categories}}
          <a href="/shop?category={{id}}" class="list-group-item">{{category}}</a>
        {{/each}}
      </ul>
    {{/if}}
  </aside>
</div>