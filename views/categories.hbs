<div class="row">
    <div class="col-md-12">
        <h2>Categories
        <a href="/categories/add" class="btn btn-success pull-right">Add Category</a>
        </h2>
        <hr />
        
        <!-- Table for displaying categories -->
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Category ID</th>
                        <th>Category Name</th>
                        <th></th> <!-- Column for Remove button -->
                    </tr>
                </thead>
                <tbody>
                    <!-- Iterate over categories and display their id and name -->
                    {{#each categories}}
                        <tr>
                            <td><a href="/items?category={{this.id}}">{{this.id}}</a></td>
                            <td><a href="/items?category={{this.id}}">{{this.category}}</a></td>
                            <td>
                                <!-- Remove button for each category -->
                                <a href="/categories/delete/{{this.id}}" class="btn btn-danger">Remove</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        
        <!-- Display the error message if no categories exist -->
        {{#unless categories}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/unless}}
    </div>
</div>
